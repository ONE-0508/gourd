<view class="container">
  <view class="header">
    <view class="user-card card">
      <view class="userinfo">
        <view class="userinfo-avatar"> 
          <open-data type="userAvatarUrl"></open-data>
        </view>
        <open-data class="userinfo-nickname" type="userNickName"></open-data>
      </view>
    </view>
  </view>

  <view class="menu-card card">
    <view class="menu-section">
      <view class="menu-item" bindtap="showClause">
        <view class="menu-icon">📋</view>
        <text class="menu-name">使用条款</text>
        <image class="menu-arrow" src="/images/chevron.png"></image>
      </view>
      
      <view class="menu-item" bindtap="showFeedback">
        <view class="menu-icon">💬</view>
        <text class="menu-name">用户反馈</text>
        <image class="menu-arrow" src="/images/chevron.png"></image>
      </view>
      
    </view>
  </view>

  <view class="footer">
    <text class="footer-text">葫芦单词 v1.0.6</text>
  </view>
</view>