.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
  margin-bottom: 40rpx;
}

.user-card {
  text-align: center;
  padding: 60rpx 40rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;  
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.userinfo-nickname {
  color: #2c3e50;
  font-size: 36rpx;
  font-weight: 600;
}

.menu-card {
  width: 100%;
  flex: 1;
  margin-bottom: 40rpx;
}

.menu-section {
  width: 100%;
}

.menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(102, 126, 234, 0.05);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.menu-name {
  flex: 1;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
}

.menu-arrow {
  width: 16rpx;
  height: 26rpx;
  opacity: 0.5;
}

.footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.setting-item {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  background: #fff;
}