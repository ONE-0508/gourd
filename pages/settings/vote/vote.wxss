.vote-container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.vote-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.vote-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.vote-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.vote-options {
  margin-bottom: 80rpx;
}

.vote-option {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: calc(100vw - 120rpx);
  margin: 0 auto;
}

.vote-option.selected {
  background-color: #2c2d31;
  color: #fff;
  transform: scale(1.02);
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-text {
  font-size: 32rpx;
  font-weight: 500;
}

.option-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.vote-submit {
  padding: 0 20rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #e0e0e0;
  color: #999;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.submit-btn.active {
  background-color: #2c2d31;
  color: #fff;
}

.submit-btn:active {
  transform: scale(0.98);
} 