<view class="container">
  <view class="header">
    <text class="subtitle">每日学习，进步不止</text>
  </view>

  <view class="word-card card">
    <view class="word-section">
      <text class="word-content">{{content}}</text>
      <!-- <view class="pron-container" bindtap="read">
        <image class="pron-icon" src="/images/pron-icon.png"></image>
      </view> -->
    </view>
    
    <view class="definition-section" wx:if="{{showNot}}">
      <view class="divider"></view>
      <text class="word-definition">{{definition}}</text>
    </view>
  </view>

  <view class="action-buttons">
    <button class="btn btn-secondary action-btn" bindtap="show">
      <text class="btn-text">不认识</text>
    </button>
    <button wx:if="{{showAddBtn}}" class="btn action-btn" bindtap="addToWordbook">
      <text class="btn-text">加到生词本</text>
    </button>
    <button class="btn action-btn" bindtap="next">
      <text class="btn-text">下一个</text>
    </button>
  </view>

</view>