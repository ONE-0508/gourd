@font-face {
  font-family: Chalkboard;
  src: url('/assets/font/chalkboard.ttf');
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.word-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
  min-height: 400rpx;
}

.word-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.word-content {
  display: block;
  font-family: Chalkboard;
  font-size: 72rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 32rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.pron-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.pron-container:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.pron-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.word-pron {
  font-family: Chalkboard;
  font-size: 32rpx;
  color: #667eea;
  font-weight: 500;
}

.definition-section {
  width: 100%;
  text-align: center;
}

.divider {
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 32rpx auto;
  border-radius: 2rpx;
}

.word-definition {
  font-size: 32rpx;
  color: #7f8c8d;
  line-height: 1.6;
  padding: 0 20rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  margin-bottom: 40rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
