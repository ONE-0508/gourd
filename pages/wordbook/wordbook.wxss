
.edit-btn {
  font-size: 28rpx;
  color: #007aff;
  background: none;
  border: none;
}
.word-list {
  background: #f5f5f5;
  width: 100%;
  border-radius: 16rpx;
  max-height: 75vh;
  overflow: auto;
}
.word-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rpx;
  padding: 24rpx 20rpx;
  position: relative;
  transition: left 0.2s;
}
.word-info {
  display: flex;
  flex-direction: column;
}
.word-en {
  font-size: 36rpx;
  font-weight: bold;
}
.word-ph {
  font-size: 28rpx;
  color: #888;
  margin-top: 4rpx;
}
.word-zh {
  font-size: 28rpx;
  color: #333;
  margin-top: 4rpx;
}
.del-btn {
  color: #fff;
  background: #ff3b30;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.swipe-del {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
} 

.btn{
  width: 100%;
  margin-top: 32rpx;
}