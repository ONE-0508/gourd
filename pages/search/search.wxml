<view class="container">
  <view class="header">
    <image class="logo" src="/images/face.png"></image>
    <text class="app-name">葫芦辞典</text>
    <text class="app-desc">专业英语词典，助您学习进步</text>
  </view>

  <view class="search-card card">
    <view class="search-section">
      <view class="search-input-container">
        <input 
          class="search-input input" 
          bindconfirm="search" 
          placeholder="请输入您要查询的单词" 
          type="text"
        />
      </view>
      <button class="search-btn btn" bindtap="help">
        <text class="search-btn-text">使用说明</text>
      </button>
    </view>
  </view>

  <view class="features">
    <view class="feature-item">
      <view class="feature-icon">📚</view>
      <text class="feature-text">专业词库</text>
    </view>
    <view class="feature-item">
      <view class="feature-icon">🔍</view>
      <text class="feature-text">快速查询</text>
    </view>
    <view class="feature-item">
      <view class="feature-icon">📖</view>
      <text class="feature-text">详细释义</text>
    </view>
  </view>

  <view class="footer">
    <text class="footer-text">输入单词后点击回车键即可查询</text>
  </view>
</view>